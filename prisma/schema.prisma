// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @default(cuid()) @id
  name              String    @db.VarChar(30)
  lastName          String    @db.VarChar(40)
  email             String    @unique @db.VarChar(255)
  password          String
  profilePhotoName  String    @db.VarChar(255) @default("default-profile-photo.png")
  resetPasswordToken String?   @unique @db.VarChar(64)
  resetPasswordTokenExpiry  BigInt?   @db.BigInt
  createdAt         DateTime  @default(now()) @map(name: "created_at")
  updatedAt         DateTime  @updatedAt @map(name: "updated_at")
  sender         Message[] @relation("Sender")
  receiver       Message[] @relation("Receiver")
  @@map(name: "users")
}

model Message {
    id                BigInt    @default(autoincrement()) @id
    content           String    @db.VarChar(500)
    createdAt         DateTime  @default(now()) @map(name: "created_at")
    updatedAt         DateTime  @updatedAt @map(name: "updated_at")
    senderId          String
    receiverId        String
    sender            User      @relation(name: "Sender", fields: [senderId], references: [id])
    receiver          User      @relation(name: "Receiver", fields: [receiverId], references: [id])
  @@map(name: "messages")
}
